<h1><%= name%></h1>
<%= form_for(@order) do |f| %>
<% @order.errors.full_messages.each do |message| %>
<div> <%= message%></div>
<%end %>
<div class="form-style-6">
<div>
	<%= f.text_field :order_number, placeholder: "Order number"%>
</div>
<div>
	<%= f.text_field :tracking_number, placeholder: "Tracking number"%>
</div>
<div>
	<%= f.text_field :address, placeholder: "Address"%>
</div>
<div>
	<%= f.collection_select(:vendor_id, Vendor.all, :id, :name) %>
</div>
	<%= f.submit "Save" , class:"add-button"%>
<button class="add-button">
	<%= link_to("Cancel",{action:"index"}) %>
</button> 
	
</div>

<%end%>
</div>